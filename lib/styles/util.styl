bd1($c, $dir = bd)
  {$dir} 1px solid $c


/// ease
/// from ant design.
  
easeOut()
  cubic-bezier(0.215, 0.61, 0.355, 1)
easeIn()  
  cubic-bezier(0.55, 0.055, 0.675, 0.19)
easeInOut()
  cubic-bezier(0.645, 0.045, 0.355, 1)
easeOutBack()
  cubic-bezier(0.18, 0.89, 0.32, 1.28)
easeInBack()
  cubic-bezier(0.6, -0.3, 0.74, 0.05)
